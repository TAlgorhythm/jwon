# SELECT C.APNT_NO APNT_NO, A.PT_NAME PT_NAME, A.PT_NO PT_NO, B.MCDP_CD MCDP_CD, B.DR_NAME DR_NAME , DATE_FORMAT(C.APNT_YMD,'%Y-%m-%d %h:%m:%s.%f') APNT_YMD
SELECT C.APNT_NO APNT_NO, A.PT_NAME PT_NAME, A.PT_NO PT_NO, B.MCDP_CD MCDP_CD, B.DR_NAME DR_NAME , C.APNT_YMD APNT_YMD
FROM PATIENT A JOIN DOCTOR B JOIN APPOINTMENT C
ON (A.PT_NO = C.PT_NO AND B.DR_ID = C.MDDR_ID)
WHERE C.APNT_CNCL_YN = 'N' AND C.MCDP_CD = 'CS'
AND DATE_FORMAT(C.APNT_YMD,'%Y-%m-%d') = '2022-04-13'
ORDER BY APNT_YMD;